%h1 Listing posts

%table.table#index
  %thead
    %tr
      %th Msg
      %th User
      %th
      %th
      %th

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.msg
        %td= post.user
        %td= link_to 'Show', post
        %td= link_to 'Edit', edit_post_path(post)
        %td= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Post', new_post_path

:javascript
  $(document).ready(function() {
    $('#index').DataTable({
      "scrollY":        "400px",
      "scrollCollapse": true,
      "paging":         false,
      dom: 'Bfrtip',
      buttons: ['copy', 'csv', 'pdf'],
      colReorder: true
    });
  });
